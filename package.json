{
  "name": "react-notes",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.0.5",
    "@esbuild-plugins/node-modules-polyfill": "^0.0.2",
    "compression": "^1.7.4",
    "concurrently": "^5.3.0",
    "date-fns": "^2.16.1",
    "esbuild": "^0.9.5",
    "excerpts": "^0.0.3",
    "express": "^4.17.1",
    "itty-router": "^2.1.9",
    "marked": "^1.2.5",
    "node-web-streams": "^0.2.2",
    "nodemon": "^2.0.6",
    "object-assign": "^4.1.1",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "react-error-boundary": "^3.1.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^2.2.0",
    "source-map-explorer": "^2.5.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "dev:cf": "node scripts/build.cloudflare.js",
    "dev": "node scripts/build.js && NODE_PATH=vendor node --conditions=react-server dist/api.server.js",
    "start": "concurrently \"npm run server:dev\" \"npm run bundler:dev\"",
    "start:prod": "concurrently \"npm run server:prod\" \"npm run bundler:prod\"",
    "server:dev": "cross-env NODE_ENV=development nodemon -- --conditions=react-server server",
    "server:prod": "cross-env NODE_ENV=production nodemon -- --conditions=react-server server",
    "bundler:dev": "cross-env NODE_ENV=development nodemon -- scripts/build.js",
    "bundler:prod": "cross-env NODE_ENV=production nodemon -- scripts/build.js",
    "prettier": "prettier --write **/*.js",
    "seed": "node ./scripts/seed.js"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  }
}
